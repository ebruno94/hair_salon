@{
  Layout = "_Layout";
}

<div class="container" id="infoContainer">
  <div class="row">
    <div class="col-md-12">
      <h1>@Model.GetName()</h1>
      <hr>
      <h2>Phone Number: @Model.GetPhoneNumber()</h2>
      <br>
      @if (Model.GetAllClients().Count == 0)
      {
          <h1> NO CLIENTS YET! </h1>
          <hr>
          <div class="container" id="formContainer">
            <div class="row">
              <div class="col-md-12">
                <h2>ADD A CLIENT FOR THIS STYLIST</h2>
                <hr>
                <form action="/Client/Create" method="post">
                  <div class="flex">
                    <div class="form-group inline-block">
                      <label for="clientName">Name: </label>
                      <input type="text" name="clientName" id="clientName">
                    </div>
                    <div class="form-group inline-block">
                      <label for="clientNumber">Phone Number: </label>
                      <input type="text" name="clientNumber">
                    </div>
                  </div>
                  <input type="hidden" name="stylistId" value="@Model.GetId()">
                  <button type="submit" class="btn">Submit</button>
                </form>
                <hr>
              </div>
            </div>
          </div>
      }
      else
      {
          <h3>Clients</h3>
            @foreach (var client in Model.GetAllClients())
            {
            <div class="row">
                <div class="col-md-7">
                  <a href="/Client/Info/@client.GetId()"><h4>@client.GetName()</h4></a>
                </div>
                <div class="col-md-5">
                  <a href="/Client/Delete/@client.GetStylistId()"><button type="button" class="btn"> Remove </button></a>
                </div>
              </div>
            }
            <hr>
            <h2>ADD ANOTHER CLIENT FOR THIS STYLIST</h2>
            <hr>
            <form action="/Client/Create" method="post">
              <div class="flex">
                <div class="form-group inline-block">
                  <label for="clientName">Name: </label>
                  <input type="text" name="clientName" id="clientName">
                </div>
                <div class="form-group inline-block">
                  <label for="clientNumber">Phone Number: </label>
                  <input type="text" name="clientNumber">
                </div>
              </div>
              <input type="hidden" name="stylistId" value="@Model.GetId()">
              <button type="submit" class="btn">Submit</button>
            </form>
            <hr>
      }
    </div>
  </div>
</div>

<a href="/"><button type="button" class="btn">View All Stylists!</button></a>
