@{
    Layout = "_Layout";
}

<div class="container" id="indexContainer">
    <div class="row">
        <div class="col-md-12">
            <h1>SPECIALTIES & SPECIALISTS</h1>
            <hr>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <h3>Stylists</h3>
        </div>
        <div class="col-md-6">
            <h3>Specialty</h3>
        </div>
    </div>
    <hr>
            @foreach (var specialty in Model)
            {
                <div class="row">
                    <div class="col-md-6">
                        <h3>@specialty.GetStylist()</h3>
                    </div>
                    <div class="col-md-6">
                        <h3>@specialty.GetSpecialty()</h3>
                    </div>
                </div>
            }
            <hr>
            <div class="row">
                <div class="col-md-12">
                    <a href="/"><button type="button" class="btn">View All Stylists!</button></a>
                </div>
            </div>
</div>
