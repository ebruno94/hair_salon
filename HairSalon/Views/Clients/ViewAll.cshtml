@{
    Layout = "_Layout";
}

<div class="container" id="indexContainer">
    <div class="row">
        <div class="col-md-12">
            <h1>CLIENTS</h1>
            <hr>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <h3>Name</h3>
        </div>
        <div class="col-md-4">
            <h3>Phone Number</h3>
        </div>
        <div class="col-md-4">
            <h3>Stylist</h3>
        </div>
    </div>
    <hr>
        @if (Model.Count != 0)
        {
            @foreach (var client in Model)
            {
                <div class="row">
                    <div class="col-md-4">
                          <a href="/Client/Info/@client.GetAssignedStylist().GetId()/@client.GetId()"><h4>@client.GetName()</h4></a>
                    </div>
                    <div class="col-md-4">
                        <h3>@client.GetPhoneNumber()</h3>
                    </div>
                    <div class="col-md-4">
                        <h3>@client.GetAssignedStylist().GetName()</h3>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="row">
                <div class="col-md-12">
                    <h2> WE CURRENTLY HAVE NO CLIENTS </h2>
                </div>
            </div>
        }
            <hr>
            <div class="row">
                <div class="col-md-6">
                    <a href="/"><button type="button" class="btn">View All Stylists</button></a>
                </div>
                <div class="col-md-6">
                    <a href="/Client/DeleteAll"><button type="button" class="btn">Remove All Clients</button></a>
                </div>
            </div>
</div>
